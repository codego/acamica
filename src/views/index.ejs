<%- include('partial/header.ejs'); %>
    <section class="py-4 bg-gray-100"> 
      <div class="container mt-6">
        <div class="row justify-content-center">
          <!-- blog item start-->
          <% for (post of posts) { %>
          <div class="col-lg-6 col-sm-6 mb-3 ml-1 mr-1">
            <div class="card shadow border-0 h-100">
              <% if (post.principalImage) {Â %>
                <a href="/<%= slug %>/<%= post.id %>/<%= post.urlFriendly %>">
                  <img src="/images/<%= post.principalImage %>" alt="..." class="img-fluid card-img-top"/>
                </a>
              <% } %>
              <div class="card-body">
                <div class="media text-white text-sm align-items-center"><img src="<%= post.user.avatar %>" alt="<%= post.user.name %>" class="avatar avatar-border-white mr-2">
                  <div>
                    <p class="text-sm mb-0 post"><%= post.user.name %></p>
                    <p class="text-gray-500 text-sm mb-0 post"><%= post.createdAt %></p>
                  </div>
                </div>
                <h2 class="my-2"><a href="/<%= slug %>/<%= post.id %>/<%= post.urlFriendly %>" class="text-dark post"><%= post.title %></a></h2>
                <p class="my-2 text-sm post-text"><%= post.sinopsis %></p><a href="post.html" class="btn btn-link pl-0">Read more<i class="fa fa-long-arrow-alt-right ml-2"></i></a>
              </div>
            </div>
          </div>  
          <% } %>
        </div>
        
        <!-- blog item end-->
      </div>
    </section>
<%- include('partial/footer.ejs') %>